---
import FormattedDate from "./FormattedDate.astro";

interface Props {
  title: string;
  date: Date;
  id: string;
  description: string;
}

const { title, date, description, id } = Astro.props;
---

<div>
  <a href={`/articles/${id}`}>
    <h2>{title}</h2>
    <FormattedDate date={date} />
    <p class="secondary body2">{description}</p>
  </a>
</div>

<style lang="scss">
  @use "sass:map";
  @use "../styles/theme.scss";
  @use "../styles/typography.scss";

  h2 {
    font-size: typography.$font-size-h3;
    font-weight: typography.$font-weight-bold;
  }

  a {
    text-decoration: none;
  }
</style>
