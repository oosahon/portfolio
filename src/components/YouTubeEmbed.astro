---
interface Props {
	videoId: string;
	title?: string;
}

const { videoId, title = 'YouTube Video' } = Astro.props;
---

<figure class="youtube-embed">
	<div class="video-wrapper">
		<iframe
			src={`https://www.youtube.com/embed/${videoId}`}
			title={title}
			loading="lazy"
			frameborder="0"
			allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
			allowfullscreen></iframe>
	</div>
	{title && <figcaption>{title}</figcaption>}
</figure>

<style>
	.youtube-embed {
		margin: 1rem 0;
	}

	.youtube-embed .video-wrapper {
		position: relative;
		padding-bottom: 56.25%; /* 16:9 aspect ratio */
		height: 0;
		overflow: hidden;
		border-radius: 0.75rem;
	}

	.youtube-embed iframe {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		border: 0;
	}

	.youtube-embed figcaption {
		margin-top: 0.5rem;
		font-size: 0.875rem;
		color: #666;
		text-align: center;
	}
</style>
